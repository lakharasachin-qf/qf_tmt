<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:shimmer_shape="linear"
        app:shimmer_duration="800"
        app:shimmer_repeat_delay="800">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1e202b"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@color/shimmer" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/ivLocation"
                        android:background="@color/shimmer"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llSearch"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ic_solid_rounded_r7"
                    android:backgroundTint="#2b2d38"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:transitionName="@string/search">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:src="@color/cinder" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/cinder"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer"
                        android:fontFamily="@font/lato_regular"
                        android:textAllCaps="true"
                        android:textColor="@color/robins_egg_blue"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer"
                        android:fontFamily="@font/lato_regular"
                        android:textAllCaps="true"
                        android:textColor="@color/robins_egg_blue"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlAll"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer" />

                    <TextView
                        android:id="@+id/tvAll"
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer"
                        android:fontFamily="@font/lato_regular"
                        android:textAllCaps="true"
                        android:textColor="@color/robins_egg_blue"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_menu_selected_bg"
                        android:backgroundTint="@color/shimmer"
                        android:fontFamily="@font/lato_regular"
                        android:textAllCaps="true"
                        android:textColor="@color/robins_egg_blue"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scaleType="centerCrop"
                android:src="@color/shimmer"
                app:riv_corner_radius="7dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:background="@color/shimmer"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvRecommendedSeeAll"
                    android:layout_width="40dp"
                    android:layout_height="7dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@color/shimmer"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/robins_egg_blue"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/shimmer_row_recommended" />

                <include layout="@layout/shimmer_row_recommended" />

                <include layout="@layout/shimmer_row_recommended" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_solid_rounded_r7"
                android:backgroundTint="#2b2d38"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llRestaurant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@color/cinder"
                            app:riv_corner_radius="10dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cinder"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:alpha="0.5"
                            android:background="@color/cinder" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:alpha="0.5"
                        android:background="@color/cinder" />

                    <LinearLayout
                        android:id="@+id/llSalon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@color/cinder"
                            app:riv_corner_radius="10dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cinder"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:alpha="0.5"
                            android:background="@color/cinder" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:alpha="0.5"
                        android:background="@color/cinder" />

                    <LinearLayout
                        android:id="@+id/llGym"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@color/cinder"
                            app:riv_corner_radius="10dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cinder"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:alpha="0.5"
                            android:background="@color/cinder" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llSpa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@color/cinder"
                            app:riv_corner_radius="10dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cinder"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:background="@color/cinder" />

                    <LinearLayout
                        android:id="@+id/llBakery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@color/cinder"
                            app:riv_corner_radius="10dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cinder"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:alpha="0.5"
                        android:background="@color/cinder" />

                    <LinearLayout
                        android:id="@+id/llRetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@color/cinder"
                            app:riv_corner_radius="10dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/cinder"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:background="@color/cinder"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvOffersSeeAll"
                        android:layout_width="40dp"
                        android:layout_height="7dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:background="@color/shimmer"
                        android:textSize="13sp" />
                </RelativeLayout>

                <include layout="@layout/shimmer_row_trending_offers" />
            </LinearLayout>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>